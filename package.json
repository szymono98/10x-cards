    "test:e2e:report": "playwright show-report",
    "dev:e2e": "cp .env.test .env.local && NODE_ENV=test next dev",
    "generate:css": "mkdir -p src/styles && npx tailwindcss -i ./src/app/globals.css -o ./src/styles/output.css",
